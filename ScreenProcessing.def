Bootstrap: docker
From: ubuntu:20.04

%post
	apt update
	apt upgrade -y

	###set local time
	apt install -y tzdata
	ln -sf /usr/share/zoneinfo/US/Pacific /etc/localtime

	### common prerequisites
	apt install -y git python3 python3-pip

	# Screen Processing from LGR GitHub repo
	git clone https://github.com/ucsf-lgr/ScreenProcessing.git

	# This is derived from the GitHub repo above
	pip install -r ScreenProcessing/requirements.txt

	# clean up
	apt autoremove

%environment
	export PATH=$PATH:/ScreenProcessing
